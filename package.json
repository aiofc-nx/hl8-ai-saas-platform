{
  "name": "hl8-ai-saas-platform",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "turbo build",
    "build:fastify-api": "pnpm build --filter=fastify-api",
    "changeset": "changeset",
    "clean": "turbo clean",
    "clear:modules": "npx npkill",
    "commit": "cz",
    "prepare": "husky",
    "dev": "turbo dev",
    "dev:fastify": "pnpm --filter fastify-api dev",
    "dev:libs": "turbo dev --filter='@hl8/*'",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "libs:fix": "pnpm dlx sherif@latest --fix",
    "lint": "turbo lint",
    "lint:fastify-api": "pnpm lint --filter=fastify-api",
    "lint:libs": "pnpm lint --filter=@hl8/*",
    "start": "turbo start",
    "start:fastify-api": "pnpm start --filter=fastify-api",
    "test": "turbo test",
    "test:libs": "pnpm test --filter=@hl8/*",
    "test:cov": "turbo test:cov",
    "test:e2e": "turbo test:e2e",
    "test:fastify-api": "pnpm test --filter=fastify-api",
    "type-check": "turbo type-check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "pnpm@10.12.1",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "ts-jest": "^29.4.5",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "private": true
}
