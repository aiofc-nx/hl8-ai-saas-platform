{
  "name": "@hl8/saas-core",
  "version": "1.0.0",
  "description": "SAAS Core module with CASL permission system integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:cov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@casl/ability": "^6.7.0",
    "@casl/mongoose": "^2.0.0",
    "@casl/prisma": "^1.5.0",
    "@hl8/application-kernel": "workspace:*",
    "@hl8/caching": "workspace:*",
    "@hl8/database": "workspace:*",
    "@hl8/domain-kernel": "workspace:*",
    "@hl8/exceptions": "workspace:*",
    "@hl8/infrastructure-kernel": "workspace:*",
    "@hl8/interface-kernel": "workspace:*",
    "@mikro-orm/core": "^6.5.8",
    "@mikro-orm/nestjs": "^6.1.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.16.0",
    "eslint": "^9.34.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "saas",
    "multi-tenant",
    "casl",
    "permissions",
    "clean-architecture",
    "ddd",
    "cqrs",
    "event-sourcing"
  ],
  "author": "HL8 Team",
  "license": "MIT"
}
