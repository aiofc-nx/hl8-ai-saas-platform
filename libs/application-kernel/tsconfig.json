{
  "extends": "../../packages/typescript-config/nestjs.json",
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "paths": {
      "@hl8/exceptions": ["../exceptions/src/index.ts"],
      "@hl8/exceptions/*": ["../exceptions/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "test", "dist", "**/*.js", "**/*.js.map"]
}
